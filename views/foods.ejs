<% include templates/head %>

    <div class="columns">
    <div class="column is-3"></div>
    <div class="column is-6" >
    <table class="table">
    <thead>
      <tr>
        <th>Food Name </th>
        <th>Food Quantity </th>
        <th>Food Price </th>
        <th>Options </th>
      </tr>
    </thead>
      <% if(foods) { %>
      <tbody>  
    <% for(var i =0; i< foods.length; i++ ) { %>
      <%var _name = foods[i].name.replace(" ","_")%>
      <tr>
        <td><a href="/foods/<%=_name%>"><%=foods[i].name %></a></td>
        <td><a href="/foods/<%=_name%>"><%=foods[i].quantity %> <i><%=foods[i].type%></i> </a></td>
        <td><a href="/foods/<%=_name%>"><%=foods[i].price %> <i> Tk</i></a></td>
        <td id="<%=_name%>_options">
          <a href="/foods/<%=foods[i].name%>" class="button is-info is-outlined">Edit</a>
          <a href="/foods/delete/<%=foods[i].name%>" class="button is-danger is-outlined">Delete</a>
        </td>
        
      </tr>
      <script>
        
        $(window).load(function(){
          var quantity = <%=foods[i].quantity%>;
          var tper = quantity / 10;
          tper = Math.round(tper);
          $("#<%=_name%>_options").append("<a href=\"/foods/<%=foods[i].name%>\" class=\"button is-info is-outlined\">Increase By "+tper+"</a>");
        });  
      </script>
    <% } %>
    </tbody>
    <% } %>
    </table>
    <a href="/" class="button is-info is-outlined">Back to Home</a>
    <a href="/foods/create" class="button is-success is-outlined">Add Food</a>
    </div>
  </div>

<% include templates/footer %>